{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,

    "outDir": "./dist/",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/index.d.ts", "./node_modules/@types/"]
  },
  "ts-node": {  "files": true },
}
